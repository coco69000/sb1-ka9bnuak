---
import Layout from '../layouts/Layout.astro';
import SearchBar from '../components/SearchBar.astro';


const documents = [
  {
    category: "Études Scientifiques",
    items: [
      {
        title: "Inventaire des amphibiens des îles et lônes du Rhône",
        type: "PDF",
        date: "2017",
        url: "https://www.smiril.fr/wp-content/uploads/2019/12/Suivi_SMIRIL_Amphibiens_LPORhone_2017.pdf"
      },
      {
        title: "Impact des changements climatiques sur les amphibiens",
        type: "PDF",
        date: "2021",
        url: "https://lashf.org/wp-content/uploads/2021/10/N178_Astruc.pdf"
      },
      {
        title: "Bilan du suivi POP Amphibiens à l'échelle nationale",
        type: "PDF",
        date: "2021",
        url: "https://www.biodiversite-centrevaldeloire.fr/sites/default/files/content/ressources/pdf/2022-04/Bilan_POPamphibien_2021_vf.pdf"
      }
    ]
  },
  {
    category: "Rapports Techniques",
    items: [
      {
        title: "Plan de gestion des zones humides",
        type: "PDF",
        date: "2023",
        url: "https://www.ecologie.gouv.fr/sites/default/files/documents/DP_ZonesHumides.pdf"
      },
      {
        title: "Protocole de suivi des populations",
        type: "PDF",
        date: "2023",
        url: "https://www.hauts-de-france.developpement-durable.gouv.fr/IMG/pdf/protocole_amphicapts.pdf"
      }
    ]
  },
  {
    category: "Publications",
    items: [
      {
        title: "Guide d'identification des amphibiens",
        type: "PDF",
        date: "2023",
        url: "https://oai-gem.ofb.fr/exl-php/document-affiche/ofb_recherche_oai/OUVRE_DOC/61344?fic=doc00084836.pdf"
        },
      {
      title: " Créer, aménager et entretenir UNE MARE DANS VOTRE JARDIN",
        type: "PDF",
        date: "2023",
        url:"https://www.valdemarne.fr/sites/default/files/creer_amenager_entretenir_une_mare_dans_son_jardin.pdf"
        },
      {
        title: "Plus d'informations sur les amphibiens du Grand Lyon",
        type: "PDF",
        date: "2023",
        url: "https://www.grandlyon.com/fileadmin/user_upload/media/pdf/environnement/guide-biodiversite/20200623_guidebiodiversite_amphibiens.pdf"
      }
    ]
  },
  {
    category: "Vidéos",
    items: [
      {
        title: "LPO Rhône - Protection des amphibiens pendant la migration aux Sauvages (69)",
        type: "Vidéo YouTube",
        date: "2013",
        url: "https://youtu.be/kA3wvw-qeqU?si=hciuMDkBh6V21DM7"
      },
      {
        title: "Présentation de 2 anoures (Grenouilles vertes et Crapaud calamite) et 1 urodèle (Triton palmé)",
        type: "Vidéo YouTube",
        date: "2023",
        url: "https://youtu.be/T0ug-E-cJhk?si=XqdLTSHqjtRa25rr"
      },
      {
        title: "Le crapaud commun, le triton alpestre et la salamandre tachetée",
        type: "Vidéo YouTube",
        date: "2023",
        url: "https://youtu.be/m7u5xgpV-ms?si=HrO3lkRyqEzukOJU"
      }
    ]
  }
];
---

<Layout title="Base Documentaire pour aller plus loin - Amphibiens de Lyon">
  <main>
    <h1>Base <span class="text-gradient">Documentaire pour aller plus loin</span></h1>
    

    <div class="doc-categories">
      {documents.map(category => (
        <section>
          <h2>{category.category}</h2>
          <div class="document-list">
            {category.items.map(doc => (
              <div class="document-card">
                <div class="doc-icon">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                    <polyline points="14 2 14 8 20 8"></polyline>
                  </svg>
                </div>
                <div class="doc-info">
                  <h3>{doc.title}</h3>
                  <div class="doc-meta">
                    <span>{doc.type}</span>
                    <span>{doc.date}</span>
                    <span>{doc.size}</span>
                  </div>
                </div>
                <a 
                  href={doc.url} 
                  target="_blank" 
                  rel="noopener noreferrer" 
                  class="download-btn"
                  title="Ouvrir le document"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                    <polyline points="7 10 12 15 17 10"></polyline>
                    <line x1="12" y1="15" x2="12" y2="3"></line>
                  </svg>
                </a>
              </div>
            ))}
          </div>
        </section>
      ))}
    </div>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 1200px;
    max-width: calc(100% - 2rem);
    color: white;
  }

  h1 {
    font-size: 3rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 2em;
  }

  .search-section {
    margin-bottom: 2rem;
  }

  .doc-categories {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }

  section {
    background: rgba(var(--accent-dark), 0.2);
    border: 1px solid rgba(var(--accent-light), 0.2);
    border-radius: 12px;
    padding: 1.5rem;
  }

  h2 {
    color: rgb(var(--accent-light));
    margin-bottom: 1.5rem;
    font-size: 1.5rem;
  }

  .document-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .document-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background: rgba(var(--accent-dark), 0.3);
    border-radius: 8px;
    transition: transform 0.3s ease;
  }

  .document-card:hover {
    transform: translateX(5px);
  }

  .doc-icon {
    color: rgb(var(--accent-light));
  }

  .doc-info {
    flex: 1;
  }

  .doc-info h3 {
    margin: 0;
    font-size: 1rem;
    color: white;
  }

  .doc-meta {
    display: flex;
    gap: 1rem;
    margin-top: 0.5rem;
    font-size: 0.875rem;
    color: #888;
  }

  .download-btn {
    background: none;
    border: none;
    color: rgb(var(--accent-light));
    cursor: pointer;
    padding: 0.5rem;
    transition: color 0.3s ease;
    text-decoration: none;
  }

  .download-btn:hover {
    color: rgb(var(--accent));
  }

  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
</style>